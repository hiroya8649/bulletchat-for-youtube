    "emittery": "^0.5.1",
    "lodash": "^4.17.15",
    "react": "^16.10.2",
    "react-color": "^2.17.3",
    "react-dom": "^16.10.2",
    "tinycolor": "^0.0.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.89",
    "@types/jest": "24.0.18",
    "@types/lodash": "^4.14.144",
    "@types/node": "12.7.12",
    "@types/react": "16.9.5",
