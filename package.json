    "@types/resize-observer-browser": "^0.1.2",
    "@types/tinycolor": "^1.1.27",
    "@types/uuid": "^3.4.5",
    "cross-env": "^6.0.3",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "react-app-rewired": "^2.1.3",
